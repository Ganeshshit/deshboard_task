{
    "compilerOptions": {
        // other options
        "jsx": "react"
    },
    "compilerOptions": {
        "target": "ES2015",
        "module": "ESNext",
        "lib": [
            "ES2015",
            "DOM"
        ],
        "jsx": "react",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    
    
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}